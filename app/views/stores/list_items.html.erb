<h1 class="text-center mt-5 mb-5 display-4 d-flex justify-content-center align-items-center gap-3" style="font-family: 'Press Start 2P', cursive;">
  <%= image_tag "wand.png", alt: "wand", style: "height: 50px; width: 50px;" %>
  The Wandering Satchel
  <%= image_tag "wand.png", alt: "wand", style: "height: 50px; width: 50px;" %>
</h1>

<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
    <% @rotating_items.each do |item| %>
      <div class="col">
        <div class="card h-100 text-center shadow rounded-4 border border-3 border-warning" style="background: #fff3e0;">
          <div class="card-img-top p-3" style="height: 150px; background-color: #f9f1e7; border-radius: 15px;">
            <%= image_tag item.img, alt: item.name, class: "img-fluid", style: "image-rendering: pixelated; width: 100%; max-height: 100%; object-fit: contain;" %>
          </div>
          <div class="card-body">
            <h5 class="card-title text-primary fw-bold" style="font-family: 'Press Start 2P', cursive;">
              <%= item.name %>
            </h5>
            <p class="card-text text-muted fst-italic" style="height: 80px;"><%= item.description %></p>
            <h5>
              <% rarity_class = case item.rarity.downcase
                when "legendary" then "text-warning"      # golden
                when "epic"      then "text-primary"      # blue
                when "rare"      then "text-success"      # green
                when "uncommon"  then "text-info"         # teal
                else "text-secondary"                     # default gray
                end %>
              <span class="<%= rarity_class %> fw-bold shadow-sm">
                <%= item.rarity.upcase %>
              </span>
            </h5>
          </div>
          <div class="card-footer d-flex justify-content-between align-items-center bg-warning bg-opacity-25 rounded-bottom">
            <span class="fw-bold text-dark" style="font-family: 'Press Start 2P', cursive;">
              Coins: <%= sprintf("%.3f", item.price / 1000.0) %> ðŸ’°
            </span>
            <%= button_to "Purchase", purchase_store_path(item), method: :post, class: "btn btn-sm btn-primary fw-bold" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>