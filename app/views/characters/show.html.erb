<div class="row g-2">
  <div class="col-md-3">
    <div class="card h-100 p-3 mt-3" style="border: none; color: black;">
      <div class="card-header text-center" style="border-radius: 20px; color: black; border: 1px solid black;">
        <h1><%= @character.name %></h1>

        <div class="d-flex flex-column justify-content-center"
             style="border: 1px solid black; border-radius: 20px; padding: 10px; background-color: white;">

          <!-- Sprite Container -->
          <div class="card" style="position: relative; width: 200px; height: 200px; background: transparent; border: none;">
            <div class="npc-sprite"
                 style="
                   --sprite: url('<%= asset_path @character.image_path %>');
                   --frame-w: 96px;
                   --frame-h: 64px;
                   --frames: 5;
                   --duration: 1s;
                   transform: translate(-50%, -50%) scale(2);
                 ">
            </div>

            <!-- Equipment Slots -->
            <div id="slot-head" style="position: absolute; bottom: 140px; left: calc(50% + 40px); transform: translateX(-50%); width: 40px; height: 40px; border: 1px solid gray; border-radius: 5px"></div>
            <div id="slot-weapon" style="position: absolute; bottom: 120px; right: -40px; width: 40px; height: 40px; border: 1px solid gray; border-radius: 5px"></div>
            <div id="slot-accessory" style="position: absolute; bottom: 120px; left: 40px; width: 40px; height: 40px; border: 1px solid gray; border-radius: 5px"></div>
            <div id="slot-body" style="position: absolute; bottom: 0; left: 40px; width: 40px; height: 40px; border: 1px solid gray; border-radius: 5px"></div>
            <div id="slot-feet" style="position: absolute; bottom: 0; right: -40px; width: 40px; height: 40px; border: 1px solid gray; border-radius: 5px"></div>
          </div>

          <!-- Character Info -->
          <h5>Level: <%= @character.level %></h5>
          <div class="d-flex justify-content-between" style="margin-top: 22px;">
            <h5>Exp: <%= @character.xp %></h5>
            <h5>Coins: <%= @character.coin %></h5>
          </div>
        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-center mt-2 gap-2" style="border-radius: 20px; padding: 10px;">
          <%= link_to "Edit", edit_character_path(@character),
                      class: "btn",
                      style: "flex: 1; border-radius: 20px; background-color: white; color: black; border: 1px solid black; text-align: center;" %>
          <%= link_to "Delete", @character,
                      data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this character?' },
                      class: "btn",
                      style: "flex: 1; border-radius: 20px; background-color: white; color: black; border: 1px solid black; text-align: center;" %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .npc-sprite {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(2);
    transform-origin: center;
    width: var(--frame-w, 96px);
    height: var(--frame-h, 64px);
    background-image: var(--sprite);
    background-repeat: no-repeat;
    background-position: 0 0;
    image-rendering: pixelated;
    animation: npc-walk var(--duration, 1s) steps(var(--frames, 5)) infinite;
  }

  @keyframes npc-walk {
    from { background-position: 0 0; }
    to {
      background-position: calc(-1 * var(--frame-w, 96px) * var(--frames, 5)) 0;
    }
  }
</style>