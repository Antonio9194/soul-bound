<div class="row g-2">
  <div class="col-md-3">
    <div class="card h-100 p-3 mt-3" style="border: none; color: black;">
      <div class="card-header text-center" style="border-radius: 20px; color: black; border: 1px solid black;">
        <h1><%= @character.name %></h1>

        <div class="d-flex flex-column justify-content-center" style="border: 1px solid black; border-radius: 20px; padding: 10px; background-color: white;">
          <h5>Level: <%= @character.level %></h5>
          <h5>Exp: <%= @character.xp %></h5>
          <h5>Coins: <%= @character.coin %></h5>
        </div>

        <div class="d-flex justify-content-center mt-2 gap-2" style="border-radius: 20px; padding: 10px;">
            <%= link_to "Edit", edit_character_path(@character), class: "btn", style: "flex: 1; border-radius: 20px; background-color: white; color: black; border: 1px solid black; text-align: center;" %>
            <%= link_to "Delete", @character,
                  data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this character?' },
                  class: "btn", style: "flex: 1; border-radius: 20px; background-color: white; color: black; border: 1px solid black; text-align: center;" %>
        </div>

      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-between">
  <div class="character-card" style="position: relative; width: 288px; height: 288px; overflow: hidden;">
  <!-- Base character -->
  <%= image_tag("south.png", style: "width: 100%; height: 100%; object-fit: contain; position: absolute; top: 0; left: 0;") %>

  <!-- Torso overlay, slightly nudged -->
  <%= image_tag("121.png", style: "width: 40%; height: 40%; object-fit: contain; position: absolute; top: 32%; left: 32%;") %>
</div>


