<p>create new characters</p>
<div class="container" data-controller="new-character">

<%= simple_form_for @character do |c| %>
  <div class="col-4">
    <%= c.input :name, label:"Character name", input_html: { class: "form-control" }%>

    <%= c.input :gender, label:"Gender", input_html: { class: "form-check-input", data: {new_character_target: "gender", action: "new-character#render"} }, collection:[["Male", "Male"], ["Female", "Female"]], as: :radio_buttons%>
    <%= c.input :apperance, label:"Appearance", input_html: { class: "form-check-input", data: {new_character_target: "apperance", action: "new-character#render"} }, collection:[["1", "1"],["2", "2"],["3", "3"]], as: :radio_buttons %>
    <%= c.input :class_name, label:"Class", input_html: { class: "form-check-input ", data: {new_character_target: "klass", action: "new-character#render"} }, collection:[["Mage", "Mage"], ["Warrior", "Warrior"], ["Rogue", "Rogue"]], as: :radio_buttons%>

    <%= c.button :submit, "Create Character", class: "btn btn-primary" %>
  </div>
<% end %>
<div class="card"
     style="border: none; width: 200px; height: 288px"
     data-new-character-target="display"
     data-phmale1="<%= asset_path('phMale1.png') %>"
     data-phmale2="<%= asset_path('phMale2.png') %>"
     data-phmale3="<%= asset_path('phMale3.png') %>"
     data-phfemale1="<%= asset_path('phFemale1.png') %>"
     data-phfemale2="<%= asset_path('phFemale2.png') %>"
     data-phfemale3="<%= asset_path('phFemale3.png') %>"
     data-mage="<%= asset_path('Mage.png') %>"
     data-warrior="<%= asset_path('Warrior.png') %>"
     data-rogue="<%= asset_path('Rogue.png') %>">
</div>
</div>
